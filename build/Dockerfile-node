FROM node:8-alpine
LABEL maintainer="Pham Ba Trung Thanh <phambatrungthanh@gmail.com>"

USER root
RUN apk add --no-cache \
    autoconf \
    automake \
    bash \
    g++ \
    libc6-compat \
    libjpeg-turbo-dev \
    libpng-dev \
    make \
    nasm


ADD start-npm.sh /start-npm.sh
RUN chmod 755 /start-npm.sh

CMD ["/start-npm.sh"]